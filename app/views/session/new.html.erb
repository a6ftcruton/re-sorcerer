<%= form_tag login_path, id: "login" do %>
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email], placeholder: "Enter email", required: true %>
  
  <%= label_tag :password %>
  <%= password_field_tag :password, params[:password], placeholder: "Enter Password", required: true %>

  <%= submit_tag "Sign In" %>
<% end %>
